{% extends 'base.html.twig' %}

{% block title %}
    Création d'un client
{% endblock %}

{% block content %}


    <a href="{{ env.base_path ~ '/clients' }}">
        <i class="fa fa-arrow-left" aria-hidden="true"></i> retour à la liste
    </a>
    <div class="card mb-3">

        <div class="card-header">
            <strong>({{ client.id }}) {{ client.firstname }} {{ client.lastname }}</strong>
        </div>
        <div class="card-body">

            <table class="table table-striped">

                <thead>
                    <tr>
                        <th>Date d'arrivée</th>
                        <th>Date de départ</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            {{ client.entryDate }}
                        </td>
                        <td>
                            {{ client.departureDate }}
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}