{% extends 'base.html.twig' %}

{% block title %}
    Création d'un client
{% endblock %}

{% block content %}


    <a href="{{ env.base_path ~ '/clients' }}">
        <i class="fa fa-arrow-left" aria-hidden="true"></i> retour à la liste
    </a>
    <div class="card mb-3">
        <div class="card-body">

            {% if client %}
                <form action="{{ env.base_path ~ '/clients/' ~ client.id ~ '/edit' }}" method="post">
            {% else %}
                <form action="{{ env.base_path ~ '/clients' }}" method="post">
            {% endif %}
                <div class="form-group">
                    <label for="formClientFirstname">Prénom</label>
                    <input type="text" id="formClientFirstname" class="form-control" name="firstname" value="{% if client %} {{ client.firstname }} {% endif %}">
                </div>

                <div class="form-group">
                    <label for="formClientLastname">Nom de famille</label>
                    <input type="text" id="formClientLastname" class="form-control" name="lastname" value="{% if client %} {{ client.lastname }} {% endif %}">
                </div>

                <div class="form-group">
                    <label for="formClientEntryDate">Date d'entrée</label>
                    <input type="date" id="formClientEntryDate" class="form-control" name="entry_date" value="{% if client %}{{ client.entryDate }}{% endif %}">
                </div>

                <div class="form-group">
                    <label for="formClientDepartureDate">Date de sortie</label>
                    <input type="date" id="formClientDepartureDate" class="form-control" name="departure_date" value="{% if client %}{{ client.departureDate }}{% endif %}">
                </div>

                {% if client %}
                    <button class="btn pull-right btn-warning">Éditer le client</button>
                {% else %}
                    <button class="btn pull-right btn-primary">Créer le nouveau client</button>
                {% endif %}

            </form>

        </div>
    </div>
{% endblock %}